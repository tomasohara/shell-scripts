## DEBUG
$ display-macros randomize-datafile
randomize-datafile () 
{ 
    local file="$1";
    local num_lines="$2";
    if [ "$num_lines" = "" ]; then
        num_lines=$(wc -l < "$file");
    fi;
    head -1 "$file";
    tail --lines=+2 "$file" | python -m mezcla.randomize_lines | head -"$num_lines"
}

