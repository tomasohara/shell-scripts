#!/usr/bin/env bats


# Make executables ./tests/../ visible to PATH
PATH="/home/aveey/tom-project/shell-scripts/tests/batspp-only/../:$PATH"

# Enable aliases
shopt -s expand_aliases



@test "test-1" {
	testfolder="/tmp/batspp-77770/test-1"
	mkdir --parents "$testfolder"
	command cp ./*.* "$testfolder"
	builtin cd "$testfolder" || echo Warning: Unable to "cd $testfolder"

	echo "==========" $'echo dummy\n' "=========="
	test-1-actual 
	echo "=========" $'dummy' "========="
	test-1-expected 
	echo "============================"
	# ???: 'echo dummy\n'=$(test-1-actual)
	# ???: 'dummy'=$(test-1-expected)
	[ "$(test-1-actual)" == "$(test-1-expected)" ]
}

function test-1-actual () {
	# no-op in case content just a comment
	true

	echo dummy

}

function test-1-expected () {
	# no-op in case content just a comment
	true

	cat <<END_EXPECTED
dummy
END_EXPECTED
}


@test "test-3" {
	testfolder="/tmp/batspp-77770/test-3"
	mkdir --parents "$testfolder"
	command cp ./*.* "$testfolder"
	builtin cd "$testfolder" || echo Warning: Unable to "cd $testfolder"

	echo "==========" $'date\n' "=========="
	test-3-actual 
	echo "=========" $'Wed Jun 21 06:30:51 CDT 2023' "========="
	test-3-expected 
	echo "============================"
	# ???: 'date\n'=$(test-3-actual)
	# ???: 'Wed Jun 21 06:30:51 CDT 2023'=$(test-3-expected)
	[ "$(test-3-actual)" == "$(test-3-expected)" ]
}

function test-3-actual () {
	# no-op in case content just a comment
	true

	date

}

function test-3-expected () {
	# no-op in case content just a comment
	true

	cat <<END_EXPECTED
Wed Jun 21 06:30:51 CDT 2023
END_EXPECTED
}
