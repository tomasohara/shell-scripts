#!/usr/bin/env bats


# Make executables ./tests/../ visible to PATH
PATH="/home/aveey/tom-project/shell-scripts/tests/batspp-only/../:$PATH"

# Enable aliases
shopt -s expand_aliases



@test "test-1" {
	testfolder="/tmp/batspp-77051/test-1"
	mkdir --parents "$testfolder"
	command cp ./*.* "$testfolder"
	builtin cd "$testfolder" || echo Warning: Unable to "cd $testfolder"

	echo "==========" $'clear\n' "=========="
	test-1-actual 
	echo "=========" $'\x1b[H\x1b[2J\x1b[3J' "========="
	test-1-expected 
	echo "============================"
	# ???: 'clear\n'=$(test-1-actual)
	# ???: '\x1b[H\x1b[2J\x1b[3J'=$(test-1-expected)
	[ "$(test-1-actual)" == "$(test-1-expected)" ]
}

function test-1-actual () {
	# no-op in case content just a comment
	true

	clear

}

function test-1-expected () {
	# no-op in case content just a comment
	true

	cat <<END_EXPECTED
[H[2J[3J
END_EXPECTED
}
